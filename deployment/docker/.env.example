# Environment Configuration Template
# Copy this file to .env and update the values

# Application Environment
ASPNETCORE_ENVIRONMENT=Production
NODE_ENV=production

# Database Configuration
DB_NAME=geoquiz
DB_USER=geoquiz_user
DB_PASSWORD=your_secure_database_password_here
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_must_be_at_least_32_characters_long_and_secure
JWT_ISSUER=geoquiz-api
JWT_AUDIENCE=geoquiz-app
JWT_EXPIRATION_MINUTES=60

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000
REACT_APP_API_URL=http://localhost:5000/api

# Backend Configuration
BACKEND_PORT=5000

# Security Configuration
ENFORCE_HTTPS=false
ENABLE_HSTS=false

# Logging Configuration
LOG_LEVEL=Information

# Domain Configuration (for production)
DOMAIN_NAME=localhost

# Nginx Configuration
NGINX_HOST=localhost
NGINX_PORT=80

# Docker Configuration
DOCKER_REGISTRY=
DOCKER_NAMESPACE=geoquiz
DOCKER_TAG=latest

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_CORS_ALL_ORIGINS=false
ENABLE_DETAILED_ERRORS=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Service Discovery Configuration
SERVICE_DISCOVERY_ENABLED=true
DATABASE_SERVICE_NAME=database
BACKEND_SERVICE_NAME=backend
FRONTEND_SERVICE_NAME=frontend

# Environment-specific URLs
# Development: localhost:3000 (frontend), localhost:5000 (backend)
# Staging: localhost:6666 (frontend), localhost:5001 (backend)
# Production: 10.66.66.64:6666 (frontend), 10.66.66.64:5000 (backend)

# Resource Limits
DB_MEMORY_LIMIT=1g
DB_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=2g
BACKEND_CPU_LIMIT=2.0
FRONTEND_MEMORY_LIMIT=512m
FRONTEND_CPU_LIMIT=1.0

# Development specific (override in docker-compose.override.yml)
# These are used when running with docker-compose up (development mode)