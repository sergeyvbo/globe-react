# GeoQuiz Docker Environment Configuration
# Copy this file to .env and customize the values

# JWT Secret Key (REQUIRED - minimum 32 characters)
JWT_SECRET_KEY=your-super-secret-jwt-key-that-is-at-least-32-characters-long

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# Security Settings (for production deployment)
ENFORCE_HTTPS=false
ENABLE_HSTS=false

# Database Configuration (optional - uses default if not specified)
# DB_CONNECTION_STRING=Data Source=/app/data/geoquiz.db

# Application Ports (optional - uses defaults if not specified)
# FRONTEND_PORT=80
# BACKEND_PORT=5000