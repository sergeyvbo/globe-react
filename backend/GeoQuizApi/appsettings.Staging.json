{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/geoquiz-staging.db"
  },
  "JwtSettings": {
    "SecretKey": "PLACEHOLDER_WILL_BE_OVERRIDDEN_BY_ENV_VAR",
    "Issuer": "GeoQuizApi-Staging",
    "Audience": "GeoQuizClient-Staging",
    "AccessTokenExpirationMinutes": 120,
    "RefreshTokenExpirationDays": 7
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:6666",
      "http://127.0.0.1:6666"
    ],
    "AllowCredentials": true,
    "AllowedHeaders": [
      "Content-Type",
      "Authorization",
      "X-Requested-With",
      "Accept",
      "Origin"
    ],
    "AllowedMethods": [
      "GET",
      "POST",
      "PUT",
      "DELETE",
      "OPTIONS"
    ]
  },
  "SecuritySettings": {
    "EnforceHttps": true,
    "EnableHsts": true,
    "HstsMaxAge": 31536000,
    "EnableRateLimiting": true,
    "RateLimit": {
      "AuthEndpointsPerMinute": 8,
      "GeneralEndpointsPerMinute": 80,
      "WindowSizeMinutes": 1
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning",
        "GeoQuizApi": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/geoquiz-staging-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "GeoQuizApi-Staging"
    }
  },
  "AllowedHosts": "*"
}