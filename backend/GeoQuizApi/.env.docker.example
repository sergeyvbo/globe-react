# Required environment variables for Docker deployment

# JWT Configuration (REQUIRED)
JwtSettings__SecretKey=your-super-secret-jwt-key-at-least-32-characters-long

# CORS Configuration (OPTIONAL - defaults to current settings)
CorsSettings__AllowedOrigins__0=http://localhost
CorsSettings__AllowedOrigins__1=http://localhost:80
CorsSettings__AllowedOrigins__2=https://localhost
CorsSettings__AllowedOrigins__3=https://localhost:443

# Database Configuration (OPTIONAL - defaults to /app/data/geoquiz.db)
ConnectionStrings__DefaultConnection=Data Source=/app/data/geoquiz.db

# Security Settings (OPTIONAL - can override defaults)
SecuritySettings__EnforceHttps=false
SecuritySettings__EnableHsts=false

# Logging (OPTIONAL)
Serilog__MinimumLevel__Default=Information