# GeoQuiz API Environment Variables
# Copy this file to .env and fill in your values for local development
# For production, set these as actual environment variables

# JWT Configuration
JwtSettings__SecretKey=your-super-secret-key-that-is-at-least-32-characters-long-for-production

# CORS Configuration  
CorsSettings__AllowedOrigins__0=https://yourdomain.com
CorsSettings__AllowedOrigins__1=https://www.yourdomain.com

# Database Configuration (optional, defaults to SQLite)
ConnectionStrings__DefaultConnection=Data Source=/app/data/geoquiz.db

# Allowed Hosts (optional, defaults to *)
AllowedHosts=yourdomain.com;www.yourdomain.com

# Security Settings (optional overrides)
SecuritySettings__EnableRateLimiting=true
SecuritySettings__RateLimit__AuthEndpointsPerMinute=5
SecuritySettings__RateLimit__GeneralEndpointsPerMinute=60

# Logging Configuration (optional overrides)
Serilog__MinimumLevel__Default=Information